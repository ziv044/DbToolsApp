# Flask Configuration
FLASK_APP=run.py
FLASK_ENV=development
SECRET_KEY=dev-secret-key-change-in-production

# Encryption key for sensitive data (passwords, etc.)
# Generate with: python -c "from cryptography.fernet import Fernet; print(Fernet.generate_key().decode())"
ENCRYPTION_KEY=your-32-byte-base64-fernet-key-here=

# System Database (PostgreSQL)
DATABASE_URL=postgresql://postgres:1234@localhost:5432/dbtools_system

# Tenant Database Settings
TENANT_DB_HOST=localhost
TENANT_DB_PORT=5432
TENANT_DB_USER=postgres
TENANT_DB_PASSWORD=1234

# Server Port
PORT=5000
